<div class="acount-page">
<div class="container align-items-center">
  <div class="row py-3 text-white">
    <div class="w-100">
      <header>
        <h1 class="logo text-center">BOOK MAKER</h1>
        <h2 class="text-center">BETTING</h2>
        <%= link_to "HOMEに戻る", root_path %>
        <hr>
      </header>
        <%= form_for ([@game, @bet]) do |form| %>
          <div class="form-group">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Player</th>
                  <th scope="col">Odds</th>
                  <th scope="col">BET</th>
                </tr>
              </thead>
              <tbody>
                <% i = 0 %>
                <% @players.each do |player| %>
                <% i += 1 %>
                  <tr>
                    <th scope="row"><%= form.radio_button :player_id, player.id %></th>
                    <td><%= player.name %></td>
                    <td><%= player.odds %></td>
                    <td><%= form.number_field :points, { class: "form-control" } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <div class="form-group" >
        <%= form.submit "BET IN", class: "btn btn-primary btn-block btn-lg"%>
        </div>
        <% end %>
    </div>
  </div>
</div>
</div>
